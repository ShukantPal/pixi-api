{
  "source": {
    "include": [
      "projects"
    ],
    "includePattern": [
      "\\.ts"
    ],
    "excludePattern": [
      "node_modules",
      "pixi-ui",
      "pixi-filters"
    ]
  },
  "plugins": [
    "plugins/markdown"
  ],
  "opts": {
    "destination": "docs"
  },
  "template": {
    "readme": "./README.md",
    "outputSourceFiles": true
  }
}
